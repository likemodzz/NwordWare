local repo = 'https://raw.githubusercontent.com/wally-rblx/LinoriaLib/main/'

local Library = loadstring(game:HttpGet(repo .. 'Library.lua'))()
local ThemeManager = loadstring(game:HttpGet(repo .. 'addons/ThemeManager.lua'))()
local SaveManager = loadstring(game:HttpGet(repo .. 'addons/SaveManager.lua'))()

local Window = Library:CreateWindow({
	Title = 'Niggerware - Creators: Likemodzz#5806 - naga#0101',
	Center = true, 
	AutoShow = true,
})

local Tabs = {

	["PlayerOptionsTab"] = Window:AddTab('Player'), 
	['TeleportTab'] = Window:AddTab('Teleport'),
	['EspTab'] = Window:AddTab('Esp'),
	['AimbotTab'] = Window:AddTab('Aimbot'),
	['SettingsTab'] = Window:AddTab('Settings'),
}

--PlrOptionsTab
local Material = Tabs.PlayerOptionsTab:AddLeftGroupbox("Material")

Material:AddToggle('ForceFieldToggle', {
	Text = 'ForceField',
	Default = false, -- Default value (true / false)
	Tooltip = 'Makes Player Model ForceField', -- Information shown when you hover over the toggle
})

Material:AddLabel('ForceFieldColor'):AddColorPicker('ColorPicker', {
 
})

--MaterialBools
local OrgColor = ""
local OrgMaterial = ""

Toggles.ForceFieldToggle:OnChanged(function()
	local Char = game.Players.LocalPlayer.Character
	if Toggles.ForceFieldToggle.Value == true then
		for _,v in pairs(Char:GetChildren()) do
			if v:IsA("BasePart") then

				OrgColor = v.BrickColor
				OrgMaterial = v.Material

				v.Material = "ForceField"
			end
		end
	elseif Toggles.ForceFieldToggle.Value == false then
		for _,v in pairs(Char:GetChildren()) do
			if v:IsA("BasePart") then

				v.Material = "Plastic"
			end
		end
	end 
end)

--TP Tab
local TeleportGroup = Tabs.TeleportTab:AddLeftGroupbox("Teleport")

TeleportGroup:AddInput('PlayerName', {
	Default = '',
	Numeric = false, -- true / false, only allows numbers
	Finished = false, -- true / false, only calls callback when you press enter
	Text = 'PlayerName',
	Tooltip = 'Input Player Name To Teleport Too', -- Information shown when you hover over the textbox

	Placeholder = '', -- placeholder text when the box is empty
})
TeleportGroup:AddInput('Height', {
	Default = '',
	Numeric = false, -- true / false, only allows numbers
	Finished = false, -- true / false, only calls callback when you press enter
	Text = 'Height',
	Tooltip = 'Input Height', -- Information shown when you hover over the textbox
	Placeholder = '', -- placeholder text when the box is empty
})
TeleportGroup:AddDropdown('PlayersList', {
	Values = { 'none' },
	Default = 1, -- number index of the value / string
	Multi = false, -- true / false, allows multiple choices to be selected

	Text = 'PlayersList',
	Tooltip = 'Select A Player To Teleport To',
})
local TeleportButton = TeleportGroup:AddButton('Button', function()
	local CFrameEnd = game.Players[Options.PlayerName.Value].Character.HumanoidRootPart.CFrame * CFrame.new(0,Options.Height.Value,0)

	local tween =  game:GetService("TweenService"):Create(game.Players.LocalPlayer.Character.HumanoidRootPart, TweenInfo.new(.1,Enum.EasingStyle.Linear), {CFrame = CFrameEnd}):Play()
end)

--Esp 
local EspGroupBox1 = Tabs.EspTab:AddLeftGroupbox("EspGroupBox1")


--Settings Tab
local MenuOptions = Tabs.SettingsTab:AddLeftGroupbox('Menu Options')

MenuOptions:AddLabel('Open/Close Bind'):AddKeyPicker('MenuKeybind', { Default = 'RightControl', NoUI = true, Text = 'Menu keybind' }) 
MenuOptions:AddButton('Copy Discord Link', function()
	setclipboard("x")
	toclipboard("x")
end)
MenuOptions:AddButton('Unload', function() Library:Unload() end)

Library.ToggleKeybind = Options.MenuKeybind -- Allows you to have a custom keybind for the menu

ThemeManager:SetLibrary(Library)
ThemeManager:SetFolder('NwordWare')
ThemeManager:ApplyToTab(Tabs.SettingsTab)
